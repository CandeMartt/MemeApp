<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeMAUI.Views.CreatorPage"
             Title="CreatorPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Text 1" Text="{Binding Text1}"/>
            <Entry Placeholder="Text 2" Text="{Binding Text2}"/>
            <Image Source="{Binding CurrentImage}" Margin="55"/>
            <Button Text="Generate Meme" Command="{Binding GenerateButton}" Margin="15,10,15,0"/>
        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>